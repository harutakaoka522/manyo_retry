<body>
  <header><p>投稿確認画面</p></header>

<div class="show_edit">
<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @task, url: tasks_path, local:true) do |form| %>

  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :end_limit %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>

  <p>タスク名:<%= @task.title %></p>
  <p>タスク詳細:<%= @task.content %></p>
  <p>終了期限:<%= @task.end_limit %></p>
  <p>状態:<%= @task.status %></p>
  <p>優先順位:<%= @task.priority %></p>
  
  <%= form.collection_check_boxes :label_ids, Label.all, :id, :title do |l| %>
    <div class= 'btn btn-success btn-sm'><%= l.check_box + l.label %></div>
  <% end %><br>
  
 <br>
  <%= form.submit "登録する" %>
  </div>
<% end %>

<div class="show_edit">
<%= form_with(model: @task, url: new_task_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>
</div>
</body>