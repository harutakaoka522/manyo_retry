<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |form| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
  <h2><%= @task.errors.count %>件のエラーがあります。</h2>
  
  <ul>
  <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  </div>
  <% end %>

  <div class="task_title">
    <%= form.label :タスク名 %>
    <%= form.text_field :title %>
  </div>

  <div class="task_content">
    <%= form.label :タスク詳細 %>
    <%= form.text_field :content %>
  </div>

  <div class="task_end_limit">
    <%= form.label :終了期限 %>
    <%= form.date_field :end_limit ,default: Date.new(2019, 5, 1) %>
  </div>

  <div class="task_status">
    <%= form.label :状態 %>
    <%= form.select :status,[["未着手","未着手"],["着手中","着手中"],["完了","完了"]] %>
  </div>

  <div class="task_priority">
    <%= form.label :優先順位 %>
    <%= form.select :priority,[["低","低"],["中","中"],["高","高"]] %>
  </div>

  <%= form.submit %>
<% end %>

  <%= link_to "タスク一覧画面にもどる", tasks_path %>